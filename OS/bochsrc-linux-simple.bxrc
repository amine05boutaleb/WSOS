# Minimal Bochs configuration for Linux/GitHub Codespaces
# Simplified version with minimal settings

megs: 32

romimage: file=$BXSHARE/BIOS-bochs-latest
vgaromimage: file=$BXSHARE/VGABIOS-lgpl-latest

boot: floppy
floppya: 1_44=./build/os.img, status=inserted

log: -
panic: action=ask
error: action=report
info: action=report
